<!DOCTYPE html>
<html>

<head>
  <title>Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <link rel="stylesheet" href="/static/css/login.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
  <script src="https://kit.fontawesome.com/32fddcfc17.js" crossorigin="anonymous"></script>

<style>
   .main-content{
    background-color:  #f3e9cd !important;
    /* border:#0b0b0b 2px solid !important; */
    box-shadow: 15px, 15px, 15px rgba(0,0,0,.5) !important;
    border-radius: 2px !important;

  }
  .col-md-4{
    background-color: rgb(244, 145, 145) !important ;
     /* border: 1px solid rgb(0,0,0,.5) !important;  */
     border-radius: 2px !important;
  }
  .col-md-8, input{
    background-color:#f3e9cd !important;
    border: 1px solid #f3e9cd ;
  }
  .checkbox{
    position: relative;
    right: 35%;
  }
  .buttonSub{
    margin-left: 20%;
  }
  h2{
    color:rgb(244, 145, 145) !important;
  }
  

</style>






</head>

<body>


  <%- include('../partials/flash') %>

  <!-- Main Content -->
  <div class="container-fluid mt-5">
    <div class="row main-content bg-success text-center">
      <div class="col-md-4 text-center company__info">

        <span>
          <img src="static/assets/logo.png" alt="logo"/>
        </span>
        <!-- <span class="company__logo">
          <h2><span class="fa fa-android"></span></h2>
        </span>
        <h4 class="company_title">Chic Station Admin</h4> -->
      </div>
      <div class="col-md-8 col-xs-12 col-sm-12 login_form ">
        <div class="container-fluid">
          <div class="row mt-2">
            <!-- <h2>Log In</h2> -->
          </div>
          <div class="row">
            <form action="/" method="POST" class="form-group mt-3">
              <div class="row">
                <input type="text" name="username" id="username" class="form__input" placeholder="Username">
              </div>
              <div class="row">
                <!-- <span class="fa fa-lock"></span> -->
                <input type="text" name="password" id="password" class="form__input" placeholder="Password">
              </div>
              <div class="row text-center">
               
                <span class="text-center checkbox">Remember Me
                 <input type="checkbox" name="remember_me" id="remember_me" class=""></span> 
               </div>
              <div class="row buttonSub">
                <input type="submit" value="Submit" class="btn">
              </div>
            </form>
          </div>
          <div class="row">
            <p>Don't have an account? <a href="/register">Register Here</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>






  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>

</body>

</html>